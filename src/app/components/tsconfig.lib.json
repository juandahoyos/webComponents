{
  "compilerOptions": {
    "declaration": true,
    "module": "es2015",
    "target": "es5",
    "baseUrl": ".",
    "stripInternal": true,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "outDir": "../build",
    "rootDir": ".",
    "lib": [
      "es2015",
      "dom"
    ],
    "skipLibCheck": true,
    "types": [],
    "paths": {
      "medidores/*": ["./*/public_api"]
    }
  },
  "angularCompilerOptions": {
    "enableIvy": false,
    "annotateForClosureCompiler": false,
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true,
    "flatModuleOutFile": "medidores.js",
    "flatModuleId": "medidores"
  },
  "files": [
    "./public_api.ts"
  ]
}
